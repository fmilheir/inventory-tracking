<h1><%= typeof id != 'undefined' ? title: 'My tracker app' %></h1>

<div class="row flex-lg-row align-items-center g-5 py-4 mb-4">
    <div class="col-12 col-lg-6">
        <h1 class="display-7 fs-15pt fw-bold mb-3">Delete Item</h1>
            <p class="lead">
            Are you sure you want to delete this Item? All of its data will be permanently removed. This action cannot be undone.
            </p>    
            <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
            
            </div>  
    </div>
    <div class="col-12 col-lg-6">
        <img src="img/dellete.webp" alt="dellete" width="300" height="260" class="d-block mx-ls-auto img-fluid" Loading="lazy" alt="graphics">
    </div>
    
</div>

<div class="px-4 md:container py-8 md:py-14 space-y-6 md:space-y-10" >
            
   

    <div class="custom-card px-6 py-4 flex flex-row space-x-4">
        <!-- Filter-->
            <div class="nav-item dropdown">
                <a class="nav-link dropdown-toggle show" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="true">
                    <button id="filterButton" type="button" class="inline-flex justify-center w-full rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-100 focus:ring-indigo-500" id="menu-button" aria-expanded="true" aria-haspopup="true">
                        Filter
                    </button>
                </a>
                <ul class="dropdown-menu" data-bs-popper="static" id="dropdown-menu">
                  <a class="dropdown-item" href="/vizualization?type=true">Stock</a>
                  <a class="dropdown-item" href="/vizualization?type=false">selled</a>
                  <hr class="dropdown-divider">
                  <a class="dropdown-item" href="/vizualization">All</a>
                </ul>
                <div class="input-group rounded">
                    <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" id="search-input" />
                    <span class="input-group-text border-0 " id="search-addon">
                      <i class="fas fa-search"></i>
                    </span>
                </div>
                <a href="#" id="search-link">Search</a>
            
    </div> 
            
           
        </div>
        <!--Add Button-->
        <form action="/add">
            <button type="submit" class="btn btn-primary btn-dark btn-lg px-3 me-md-1">
                Add
            </button>
        </form>
    </div>
    
    <% if(items != '') { %>
        <% items.forEach(function(item, index){ %>
            <div class="col-12 col-lg-6">
                <div class="row flex-lg-row  g-5 py-4 mb-4">
                    <%var type = "selled" %>
                    <% if(item.type == true){ %>
                        <%var type = "stock";%>
                        <% } %>
                    <p class="lead align-items-center"><%= item.object %>&emsp;<%= item.quantity %>&emsp;<%=type %></p>
                    <td class="text-center"><a  href=/add/edit/<%= item.id%> class="btn btn-info btn-xs"><span class="glyphicon glyphicon-remove"></span> Edit</a></td></a>
                        <a  href=/add/delete/<%= item.id %> class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span> Del</a></td>
                </div>
            </div>
                <% }) %>
                <% } else { %>
                  <p>No items found.</p>
                <% } %>
    <!--Pagination Controls -->
    <div class="mx-auto bg-white rounded-lg shadow-xl px-3 py-2 md:px-6 md:py-6 w-min">
</div>